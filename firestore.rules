
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Products: Allow public read
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow write for authenticated users (admins)
    }

    // Categories: Allow public read
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow write for authenticated users (admins)
    }
    
    // Contact Messages: Allow anyone to create (submit the form)
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Only admins can manage messages
    }

    // Orders: Users can only create and read their own orders.
    match /orders/{orderId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Disallow updates/deletes for now
    }
  }
}
